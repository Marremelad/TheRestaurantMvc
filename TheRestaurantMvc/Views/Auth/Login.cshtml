@model TheRestaurantMvc.Models.ViewModels.LoginViewModel

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="mb-3">Welcome Back</h2>
                        <p class="text-muted">Sign in to your account</p>
                    </div>
                    
                    @if (TempData["ErrorMessage"] != null || !ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger" role="alert">
                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div>@TempData["ErrorMessage"]</div>
                            }
                            <div asp-validation-summary="All" class="mb-0"></div>
                        </div>
                    }
                    
                    <form asp-action="Login" method="post" novalidate>
                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label">Username</label>
                            <input asp-for="UserName" class="form-control" placeholder="Enter your username">
                        </div>

                        <div class="mb-4">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password">
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-danger btn-lg">Sign In</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>