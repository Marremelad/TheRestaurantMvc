@model TheRestaurantMvc.Models.ViewModels.MenuItemCreateViewModel

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="mb-3">Create Menu Item</h2>
                        <p class="text-muted">Add a new item to the menu</p>
                    </div>
                    
                    <form asp-controller="Admin" asp-action="CreateMenuItem" method="post" novalidate>
                        <div class="mb-3">
                            <label for="Name" class="form-label">Name</label>
                            <input id="Name" name="Name" class="form-control" 
                                   value="@(Model?.Name ?? "")" 
                                   placeholder="Enter menu item name" />
                        </div>

                        <div class="mb-3">
                            <label for="Price" class="form-label">Price</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" step="0.01" min="0" class="form-control" 
                                       name="Price" id="Price" 
                                       value="@(Model?.Price ?? 0)" 
                                       placeholder="0.00" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="Description" class="form-label">Description</label>
                            <textarea id="Description" name="Description" class="form-control" rows="4" 
                                      placeholder="Describe the menu item">@(Model?.Description ?? "")</textarea>
                        </div>

                        <div class="mb-3">
                            <label for="Image" class="form-label">Image URL</label>
                            <input id="Image" name="Image" class="form-control" 
                                   value="@(Model?.Image ?? "")" 
                                   placeholder="https://example.com/image.jpg" />
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                <input id="IsPopular" name="IsPopular" type="checkbox" class="form-check-input" value="true"
                                       @(Model?.IsPopular == true ? "checked" : "") />
                                <input name="IsPopular" type="hidden" value="false" />
                                <label class="form-check-label" for="IsPopular">
                                    Mark as Popular
                                </label>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-controller="Admin" asp-action="Menu" class="btn btn-outline-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-success">Create Menu Item</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>