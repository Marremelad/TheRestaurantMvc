@model TheRestaurantMvc.Models.ViewModels.MenuItemCreateViewModel

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="mb-3">Create Menu Item</h2>
                        <p class="text-muted">Add a new item to the menu</p>
                    </div>
                    
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger" role="alert">
                            <div asp-validation-summary="All" class="mb-0"></div>
                        </div>
                    }
                    
                    <form asp-controller="Admin" asp-action="CreateMenuItem" method="post" novalidate>
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input asp-for="Name" class="form-control" 
                                   placeholder="Enter menu item name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">Price</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Price" type="number" step="0.01" min="0" class="form-control" 
                                       placeholder="0.00" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4" 
                                      placeholder="Describe the menu item"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Image" class="form-label">Image URL</label>
                            <input asp-for="Image" class="form-control" 
                                   placeholder="https://example.com/image.jpg" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                <input asp-for="IsPopular" type="checkbox" class="form-check-input" />
                                <label asp-for="IsPopular" class="form-check-label">
                                    Mark as Popular
                                </label>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-controller="Admin" asp-action="Menu" class="btn btn-outline-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-success">Create Menu Item</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}