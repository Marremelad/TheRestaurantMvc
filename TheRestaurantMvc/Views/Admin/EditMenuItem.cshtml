@model ApiResponse<MenuItem>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="mb-3">Edit Menu Item</h2>
                        <p class="text-muted">Update the details for this menu item</p>
                    </div>
                    @if (!Model.IsSuccess || Model.Value == null)
                    {
                        <div class="alert alert-danger" role="alert">
                            <div>@Model.Message</div>
                        </div>
                    }
                    else
                    {
                        <form asp-action="Update" method="post" novalidate>
                            <input type="hidden" name="Id" value="@Model.Value.Id" />
                            
                            <div class="mb-3">
                                <label for="Name" class="form-label">Name</label>
                                <input id="Name" name="Name" class="form-control" value="@Model.Value.Name" placeholder="Enter menu item name">
                            </div>

                            <div class="mb-3">
                                <label for="Price" class="form-label">Price</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input id="Price" name="Price" type="number" step="0.01" min="0" class="form-control" value="@Model.Value.Price" placeholder="0.00">
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="Description" class="form-label">Description</label>
                                <textarea id="Description" name="Description" class="form-control" rows="4" placeholder="Enter menu item description">@Model.Value.Description</textarea>
                            </div>

                            <div class="mb-3">
                                <label for="Image" class="form-label">Image URL</label>
                                <input id="Image" name="Image" class="form-control" value="@Model.Value.Image" placeholder="Enter image URL">
                            </div>

                            <div class="mb-4">
                                <div class="form-check">
                                    <input id="IsPopular" name="IsPopular" type="checkbox" class="form-check-input" @(Model.Value.IsPopular ? "checked" : "")>
                                    <label class="form-check-label" for="IsPopular">
                                        Mark as Popular
                                    </label>
                                </div>
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a asp-action="AdminIndex" class="btn btn-outline-secondary me-md-2">Cancel</a>
                                <button type="submit" class="btn btn-danger">Update Menu Item</button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>