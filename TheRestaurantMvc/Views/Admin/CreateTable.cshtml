@model TheRestaurantMvc.Models.ViewModels.TableCreateViewModel

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="mb-3">Create Table</h2>
                        <p class="text-muted">Add a new table to the restaurant</p>
                    </div>
                    
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger" role="alert">
                            <div asp-validation-summary="All" class="mb-0"></div>
                        </div>
                    }
                    
                    <form asp-controller="Admin" asp-action="CreateTable" method="post" novalidate>
                        <div class="mb-3">
                            <label asp-for="Number" class="form-label">Table Number</label>
                            <input asp-for="Number" type="number" min="1" class="form-control" 
                                   placeholder="Enter table number" />
                            <span asp-validation-for="Number" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Capacity" class="form-label">Capacity</label>
                            <input asp-for="Capacity" type="number" min="1" max="10" class="form-control" 
                                   placeholder="Enter seating capacity" />
                            <span asp-validation-for="Capacity" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-controller="Admin" asp-action="Tables" class="btn btn-outline-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-success">Create Table</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}