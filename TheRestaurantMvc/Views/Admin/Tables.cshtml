@model ApiResponse<List<Table>>

<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="display-4 mb-3">Restaurant Tables</h1>
        <p class="lead text-muted">Overview of all available seating</p>
    </div>
    
    @if (!Model.IsSuccess)
    {
        <div class="col-12 text-center">
            <p>An error occurred. Could not fetch data.</p>
        </div>
    }
    else if (Model.Value!.Count == 0)
    {
        <div class="col-12 text-center">
            <p>No tables available</p>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-6 mx-auto">
                <div class="mb-3 text-end">
                    <a asp-controller="Admin" asp-action="CreateTable" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Create Table
                    </a>
                </div>

                <div class="row mb-3 pb-2 border-bottom text-center">
                    <div class="col-4">
                        <h6 class="mb-0 text-muted">Table Number</h6>
                    </div>
                    <div class="col-4">
                        <h6 class="mb-0 text-muted">Capacity</h6>
                    </div>
                    <div class="col-4"></div>
                </div>
                
                @foreach (var table in Model.Value!)
                {
                    <div class="row mb-3 pb-2 border-bottom text-center align-items-center">
                        <div class="col-4">
                            <span class="fw-bold">@table.Number</span>
                        </div>
                        <div class="col-4">
                            <form asp-controller="Admin" asp-action="UpdateTable" asp-route-id="@table.Number" 
                                  method="post" style="display: inline;">
                                <input type="number" 
                                       name="Capacity" 
                                       value="@table.Capacity" 
                                       min="1" 
                                       max="10"
                                       class="form-control form-control-sm text-center d-inline-block" 
                                       style="width: 80px;"
                                       onchange="this.form.submit()">
                            </form>
                        </div>
                        <div class="col-4">
                            <form asp-controller="Admin" asp-action="DeleteTable" asp-route-id="@table.Number" 
                                  method="post" style="display: inline;"
                                  onsubmit="return confirm('Are you sure you want to delete table @table.Number?');">
                                <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>
