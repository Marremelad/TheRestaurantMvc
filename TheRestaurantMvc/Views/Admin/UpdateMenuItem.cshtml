@model ApiResponse<MenuItem>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="mb-3">Edit Menu Item</h2>
                        <p class="text-muted">Update the details for this menu item</p>
                    </div>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger" role="alert">
                            <div asp-validation-summary="All" class="mb-0"></div>
                        </div>
                    }

                    <form asp-controller="Admin" asp-action="UpdateMenuItem" asp-route-id="@Model.Value!.Id" method="post" novalidate>
                        <div class="mb-3">
                            <label for="Name" class="form-label">Name</label>
                            <input name="Name" id="Name" class="form-control" placeholder="Enter menu item name" value="@Model.Value!.Name" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="Price">Price</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" step="0.01" min="0.01" class="form-control"
                                       id="Price" name="Price" value="@Model.Value!.Price"
                                       placeholder="0.00"
                                       required />
                            </div>
                        </div>
    
                        <div class="mb-3">
                            <label for="Description" class="form-label">Description</label>
                            <textarea name="Description" id="Description" class="form-control" rows="4" placeholder="Describe the menu item">@Model.Value!.Description</textarea>
                        </div>

                        <div class="mb-3">
                            <label for="Image" class="form-label">Image URL</label>
                            <input name="Image" id="Image" class="form-control" placeholder="https://example.com/image.jpg" value="@Model.Value!.Image" />
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                <input name="IsPopular" type="checkbox" class="form-check-input" value="true" @(Model.Value!.IsPopular ? "checked" : "") />
                                <input name="IsPopular" type="hidden" value="false" />
                                <label for="@Model.Value.IsPopular" class="form-check-label">
                                    Mark as Popular
                                </label>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-controller="Admin" asp-action="Menu" class="btn btn-outline-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-success">Update Menu Item</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
