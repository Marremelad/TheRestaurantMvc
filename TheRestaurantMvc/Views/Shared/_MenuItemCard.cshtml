@model MenuItem
@{
    var hasJwt = Context.Request.Cookies.ContainsKey("jsonWebToken");
}

<div class="col-lg-4 col-md-6 mb-4">
    <div class="card h-100 shadow-sm">
        <div class="position-relative">
            <img src="@Model.Image" class="card-img-top" alt="@Model.Name" style="height: 250px; object-fit: cover;">
            @if (Model.IsPopular)
            {
                <span class="badge bg-danger position-absolute top-0 end-0 m-3">Popular</span>
            }
        </div>
        <div class="card-body d-flex flex-column">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text text-muted flex-grow-1">@Model.Description</p>
            <div class="mt-auto d-flex justify-content-between align-items-center">
                <span class="h4 text-primary mb-0">$@Model.Price</span>
                @if (hasJwt)
                {
                    <a class="btn btn-outline-success" asp-controller="Admin" asp-action="EditMenuItem" asp-route-id="@Model.Id">Edit</a>
                }
            </div>
            
        </div>
    </div>
</div> 