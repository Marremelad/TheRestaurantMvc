@{
    var hasJwt = Context.Request.Cookies.ContainsKey("jsonWebToken");
    var baseUrl = $"{Context.Request.Scheme}://{Context.Request.Host}";
    
    const string defaultTitle = "The Restaurant - Fine Dining Experience";
    const string defaultDescription = "Experience culinary excellence at The Restaurant. Fresh ingredients, innovative dishes, and exceptional service in the heart of the city.";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    
    <title>@(ViewData["Title"] ?? defaultTitle)</title>
    <meta name="description" content="@(ViewData["Description"] ?? defaultDescription)"/>
    <meta name="keywords" content="restaurant, fine dining, food, cuisine, reservation, menu"/>
    
    <meta property="og:title" content="@(ViewData["Title"] ?? defaultTitle)"/>
    <meta property="og:description" content="@(ViewData["Description"] ?? defaultDescription)"/>
    <meta property="og:type" content="website"/>
    <meta property="og:url" content="@(baseUrl + Context.Request.Path)"/>
    <meta property="og:site_name" content="The Restaurant"/>
    
    <link rel="canonical" href="@(baseUrl + Context.Request.Path)"/>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <div class="d-sm-none d-flex justify-content-between align-items-center w-100">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">The Restaurant</a>
                @if (hasJwt)
                {
                    <a class="btn btn-outline-primary btn-sm" asp-controller="Auth" asp-action="Logout">Log Out</a>
                }
                else
                {
                    <a class="btn btn-outline-primary btn-sm" asp-controller="Auth" asp-action="Login">Log In</a>
                }
            </div>
            
            <a class="navbar-brand d-none d-sm-block" asp-area="" asp-controller="Home" asp-action="Index">The Restaurant</a>
            
            <div class="d-sm-none w-100 mt-2">
                <div class="d-flex flex-wrap gap-2 justify-content-center">
                    @if (hasJwt)
                    {
                        <a class="btn btn-outline-dark btn-sm" asp-area="" asp-controller="Admin" asp-action="Menu">Menu</a>
                        <a class="btn btn-outline-dark btn-sm" asp-area="" asp-controller="Admin" asp-action="Reservations">Reservations</a>
                        <a class="btn btn-outline-dark btn-sm" asp-area="" asp-controller="Admin" asp-action="Tables">Tables</a>
                    }
                    else
                    {
                        <a class="btn btn-outline-dark btn-sm" asp-area="" asp-controller="MenuItems" asp-action="Index">Menu</a>
                    }
                </div>
            </div>
    
            <div class="navbar-collapse collapse d-none d-sm-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 gap-3">
                    @if (hasJwt)
                    {
                        <li class="nav-item">
                            <a class="btn btn-outline-dark" asp-area="" asp-controller="Admin" asp-action="Menu">Menu</a>
                        </li>

                        <li class="nav-item">
                            <a class="btn btn-outline-dark" asp-area="" asp-controller="Admin" asp-action="Reservations">Reservations</a>
                        </li>

                        <li class="nav-item">
                            <a class="btn btn-outline-dark" asp-area="" asp-controller="Admin" asp-action="Tables">Tables</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-outline-dark" asp-area="" asp-controller="MenuItems" asp-action="Index">Menu</a>
                        </li>
                    }
                </ul>
                
                <div class="ms-auto me-3">
                    @if (hasJwt)
                    {
                        <a class="btn btn-outline-primary" asp-controller="Auth" asp-action="Logout">Log Out</a>
                    }
                    else
                    {
                        <a class="btn btn-outline-primary" asp-controller="Auth" asp-action="Login">Log In</a>
                    }
                </div>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - The Restaurant - Fine dining experience in the city
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>