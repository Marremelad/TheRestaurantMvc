@model ApiResponse<List<Reservation>>

<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="display-4 mb-3">Reservations</h1>
        <p class="lead text-muted">Manage all restaurant reservations</p>
    </div>
    
    @if (!Model.IsSuccess)
    {
        <div class="col-12 text-center">
            <div class="alert alert-danger" role="alert">
                <p class="mb-0">No reservations found.</p>
            </div>
        </div>
    }
    else if (Model.Value!.Count == 0)
    {
        <div class="col-12 text-center">
            <div class="alert alert-info" role="alert">
                <p class="mb-0">No reservations found</p>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <!-- Search Box -->
                <div class="d-flex justify-content-end mb-3">
                    <div class="col-md-4 col-lg-3">
                        <form asp-controller="Admin" asp-action="ReservationsByEmail" method="get">
                            <div class="input-group">
                                <input type="text" name="email" class="form-control" placeholder="Search by email..." value="@ViewBag.SearchEmail">
                                <button type="submit" class="btn btn-outline-secondary">
                                    <i class="bi bi-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                
                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                <tr>
                                    <th scope="col" class="text-start">ID</th>
                                    <th scope="col" class="text-start">Date</th>
                                    <th scope="col" class="text-start">Time</th>
                                    <th scope="col" class="text-start">Table</th>
                                    <th scope="col" class="text-start">Guest Name</th>
                                    <th scope="col" class="text-start">Email</th>
                                    <th scope="col" class="text-start">Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tbody>
                                    @foreach (var reservation in Model.Value!.OrderBy(r => r.Date).ThenBy(r => r.TimeSlot))
                                    {
                                        <tr>
                                            <td class="fw-bold">#@reservation.Id</td>
                                            <td>@reservation.Date.ToString("MMM dd, yyyy")</td>
                                            <td>@reservation.DisplayableTimeSlot</td>
                                            <td>
                                                <span class="badge bg-primary">Table @reservation.TableNumber</span>
                                            </td>
                                            <td>@reservation.FirstName @reservation.LastName</td>
                                            <td>
                                                <a href="mailto:@reservation.Email" class="text-decoration-none">@reservation.Email</a>
                                            </td>
                                            <td>
                                                <div class="d-flex gap-2">
                                                    <form asp-controller="Admin" asp-action="DeleteReservation" asp-route-id="@reservation.Id" 
                                                          method="post" style="display: inline;"
                                                          onsubmit="return confirm('Are you sure you want to delete reservation #@reservation.Id for @reservation.FirstName @reservation.LastName?');">
                                                        <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>